[user]
	email = your@mail.address
	name = Your Name
[alias]
	ad = add
	b = branch -a
	br = branch
	ca = commit -v --amend
	ci = commit -v
	co = checkout
	ds = diff --staged
	l = log
	lg = log --graph
	lr = log --reverse
	lp = log -p --stat
	lpr = log -p --stat --reverse
	pr = pull --rebase
	s = show
        sc = shortlog -s # SCouter
	st = status
	svd = svn dcommit
	svf = svn fetch
	svr = svn rebase
	serve = daemon --export-all --base-path=. --base-path-relaxed
	in = !sh -c 'git log ..origin/${1:-master}'
	out = !sh -c 'git log origin/${1:-master}..' -
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
[github]
	user = your_github_account_name
